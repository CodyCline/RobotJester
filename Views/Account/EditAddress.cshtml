@model Addresses
@using RobotJester.Models
<div class="row">
    <h3>Make a correction, or change this address</h3>
    <form method="POST" asp-controller="Account" asp-action="ValidateAddress">
        <div class="form-group">
            <span asp-validation-for="address_line_one"></span>
            <label asp-for="address_line_one">Address1</label>
            <input class="form-control" asp-for="address_line_one">
        </div>
        <div class="form-group">
            <span asp-validation-for="address_line_two"></span>
            <label asp-for="address_line_two">Address2</label>
            <input class="form-control" asp-for="address_line_two">
        </div>
        <div class="form-group">
            <span asp-validation-for="city"></span>
            <label asp-for="city">City/Territory</label>
            <input class="form-control" asp-for="city">
        </div>
