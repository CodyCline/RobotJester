@model Orders
<div class="container">
    <div class="row">
        <div class="col-xs-12">
    		<div class="">
    			<h2 class="text-left">Invoice</h2>
                <h2 class="text-right">Order # @Model.order_id</h2>
    		</div>
    		<hr>
    		<div class="row">
    			<div class="col-xs-6">
    				<address>
    				<strong>Billed To:</strong><br>
    					@Model.customer.first_name @Model.customer.last_name<br>
    					1234 Main<br>
    					Apt. 4B<br>
    					Springfield, ST 54321
    				</address>
    			</div>
    			<div class="col-xs-6 text-right">
    				<address>
        			<strong>Shipped To:</strong><br>
    					Jane Smith<br>
    					1234 Main<br>
    					Apt. 4B<br>
    					Springfield, ST 54321
    				</address>
    			</div>
    		</div>
    		<div class="row">
    			<div class="col-xs-6">
    				<address>
    					<strong>Details:</strong><br>
    					Email: @Model.customer.email<br>
                        Phone: @Model.customer.phone<br>
                        Stripe Order Token #: HERE<br>
                        Stripe Card Token #: HERE<br>
    				</address>
    			</div>
    			<div class="col-xs-6 text-right">
    				<address>
    					<strong>Order Date:</strong><br>
    					@Model.created_at.ToString("D")<br>
    				</address>
    			</div>
    		</div>
    	</div>
    </div>
    
    <div class="row">
    	<div class="col-md-12">
    		<div class="panel panel-default">
    			<div class="panel-heading">
    				<h3 class="panel-title"><strong>Order summary</strong></h3>
    			</div>
    			<div class="panel-body">
    				<div class="table-responsive">
    					<table class="table table-condensed table-striped">
    						<thead>
                                <tr>
        							<td><strong>Item</strong></td>
        							<td class="text-center"><strong>Price</strong></td>
        							<td class="text-center"><strong>Quantity</strong></td>
        							<td class="text-right"><strong>Totals</strong></td>
                                </tr>
    						</thead>
    						<tbody>
    							<!-- foreach here with ViewBag -->
                                @foreach(var i in ViewBag.Order)
                                {
                                    var tempTotal = @i.all_items.price * @i.quantity;
                                    <tr>
                                        <td>@i.all_items.name</td>
                                        <td class="text-center">@i.all_items.price.ToString("C")</td>
                                        <td class="text-center">@i.quantity</td>
                                        <td class="text-right">@tempTotal.ToString("C")</td>
    							    </tr>
                                }
    							<tr>
    								<td class="thick-line"></td>
    								<td class="thick-line"></td>
    								<td class="thick-line text-center"><strong>Subtotal</strong></td>
    								<td class="thick-line text-right">@Model.subtotal.ToString("C")</td>
    							</tr>
    							<tr>
    								<td class="no-line"></td>
    								<td class="no-line"></td>
    								<td class="no-line text-center"><strong>Shipping</strong></td>
    								<td class="no-line text-right">@Model.tax.ToString("C")</td>
    							</tr>
    							<tr>
    								<td class="no-line"></td>
    								<td class="no-line"></td>
    								<td class="no-line text-center"><strong>Total</strong></td>
    								<td class="no-line text-right">@Model.total_billed.ToString("C")</td>
    							</tr>
    						</tbody>
    					</table>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>
</div>