@model List<Products>
@using RobotJester.Models

<div class="container text-center">
    <h1>OUR INVENTORY</h1>
</div>

<div class="container col-centered">
    <div class="row">
        @foreach(var item in ViewBag.All)
        {                  
            <div class="col-md-3 col-centered">
                <div class="thumbnail">
                    <img src="http://via.placeholder.com/350x150" alt="">
                    <div class="caption">
                        <h3>@item.name</h3>
                        
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla egestas feugiat gravida. </p>
                        <ul>
                            <li>@item.instock_quantity left in stock </li>
                            <li>$@item.price</li>
                        </ul>
                        <p class="text-center">
                            <a href="/Products/@item.product_id" class="btn btn-success" role="button">See Details</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


