@model List<Products>
@using RobotJester.Models

<div class="container">
    <h1>CHECK OUT OUR ITEMS</h1>
</div>

<div class="container">
    @foreach(var item in ViewBag.All)
    {
        <div class="container">
            <div class="row">
                <div class="row">
                    <div class=" col-md-3 col-sm-4">
                        <div class="thumbnail">
                            <img src="http://via.placeholder.com/350x150" alt="">
                            <div class="caption">
                                <h3>@item.name</h3>
                                
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla egestas feugiat gravida. </p>
                                <ul>
                                    <li>@item.instock_quantity left in stock </li>
                                    <li>$@item.price.99</li>
                                </ul>
                                <p class="text-center">
                                    <a href="/Products" class="btn btn-primary" role="button">BUY NOW</a> 
                                    <a href="/product/@item.product_id" class="btn btn-success" role="button">See Details</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    
</div>


