@model List<Products>
@using RobotJester.Models

<div class="container text-center">
    <h1 class="form-text">OUR INVENTORY</h1>
</div>

<div class="container col-centered" id="card">
    <div class="row">
        @foreach(var item in ViewBag.All)
        {                  
            <div class="col-md-3 col-centered">
                <div class="thumbnail">
                    <a href="/Products/@item.product_id"><img class="img-responsive" id="the-jester" src="~/images/jester.png" alt=""></a>
                    <div class="caption">
                        <h2 class="product-name">@item.name</h2>
                        <ul>
                            @if(item.instock_quantity <= 0)
                            {
                                <li class="product-stock">Sorry, out of stock</li>
                                <li class="product-price">Our price: <strong>@item.price.ToString("C")</strong></li>
                            }
                            else
                            {
                                <li class="product-stock" >@item.instock_quantity left in stock </li>
                                <li class="product-price">Our price: <strong>@item.price.ToString("C")</strong></li>
                            }
                        </ul>
                        <p class="text-center">
                            <a href="/Products/@item.product_id" class="btn btn-success" role="button">See Details</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


