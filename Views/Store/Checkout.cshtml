@using Microsoft.Extensions.Options
@inject IOptions<StripeSettings> Stripe
@inject LoggedInUserService userService  

	<!-- For converting dollars into cents for stripe to process -->
	@{
		var total = @userService.user_total.total * 100;
	}
	


<div class="container">
    <form asp-action="Charge" method="POST">
        <script
            src="https://checkout.stripe.com/checkout.js"
            class="stripe-button"
            data-key="@Stripe.Value.PublishableKey"
    		data-name="Robot Jester!"
    		data-description="@userService.get_sum.Count Items, $@userService.user_total.total"
    		data-amount="@total">
  		</script>
		<input type="hidden" value="@total" name="total" required>
	</form>
</div>


<script src="https://js.stripe.com/v3/"></script>

